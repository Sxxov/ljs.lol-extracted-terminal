{
	"compilerOptions": {
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "es2020",
		"target": "esnext",
		"resolveJsonModule": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": ["es6", "es2017", "ES2015", "ESNext", "DOM"],
		"allowSyntheticDefaultImports": true
	},
    "exclude": [
		"node_modules"
	]
}